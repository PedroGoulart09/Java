package project_java;

import java.util.Locale;
import java.util.Scanner;

public class desafiosUdemy {
	public static void main(String[] args) {

		/*
		 * String a, b, c; int y;
		 * 
		 * Scanner str = new Scanner(System.in);
		 * 
		 * a = str.nextLine(); b = str.nextLine(); c = str.nextLine(); y =
		 * str.nextInt();
		 * 
		 * str.close();
		 * 
		 * System.out.println("Dados Digittados são: "); System.out.println(a);
		 * System.out.println(b); System.out.println(c); System.out.println(y);
		 * 
		 * Locale.setDefault(Locale.US);
		 * 
		 * int x = 10; int h = 20; int res = x + h;
		 * 
		 * System.out.printf("O resultado da some de %.0f e %.0f = %.0f", x, h, res);
		 */
		
		Scanner str = new Scanner(System.in);
		
		
		int hora;
		System.out.println("Que horas são ?");
		hora = str.nextInt();
		
		
		if(hora < 12) {
			System.out.println("Boa Dia");
		}else {
			if(hora >= 18) {
				System.out.println("Boa Noite");
			}else {
				
				System.out.println("Boa Tarde");
			}
			
		}
		
		
		str.close();
	}
}
